@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="layui-form layuimini-form" lay-filter="EditDepartmentForm">
        <input type="hidden" name="Id" />
        <div class="layui-form-item">
            <label class="layui-form-label required">部门名称</label>
            <div class="layui-input-block">
                <input type="text" name="DepartmentName" lay-verify="required" lay-reqtext="部门名称不能为空" placeholder="请输入账号" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label required">主管</label>
            <div class="layui-input-block">
                <input type="text" name="LeaderId" lay-verify="required" lay-reqtext="主管不能为空" placeholder="请输入主管" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label required">父部门</label>
            <div class="layui-input-block">
                <input type="text" name="ParentId" lay-verify="required" lay-reqtext="父部门不能为空" placeholder="请输入父部门" value="" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label required">部门描述</label>
            <div class="layui-input-block">
                <textarea name="Description" placeholder="请输入部门描述" class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
    <script src="../layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form,
                layer = layui.layer,
                $ = layui.$;

            // 渲染部门信息
            $.ajax({
                url: '/Department/FindIdDepartmentInfo',
                type: 'get',
                data: { Id: parent.DepartmentId },
                success: function (res) {
                    if (res.code == 200) {
                        form.val("EditDepartmentForm", { //formTest 即 class="layui-form" 所在元素属性 lay-filter="" 对应的值
                            "DepartmentName": res.data.departmentName // "name": "value"
                            , "LeaderId": res.data.leaderId
                            , "ParentId": res.data.parentId
                            , "Description": res.data.description
                            , "Id": res.data.id
                        });
                    }
                }
            })

            //监听提交
            form.on('submit(saveBtn)', function (data) {
                $.ajax({
                    url: '/Department/EditDepartementInfo',
                    type: 'put',
                    data: data.field,
                    success: function (res) {
                        if (res.code == 200) {
                            // 销毁弹出层
                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                        } else {
                            layer.alert(res.msg)
                        }
                    }
                })
                return false;
            });

        });</script>
</body>
</html>